@{
    var className = Model.Customers.Count > 5 ? "populer" : null;
}

<h2 class ="@className">@Model.Movie.Name</h2>
<p>@Model.Customers.Count</p>

@if (Model.Customers.Count == 0)
{
    <text>No one has reted this movie before</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}

<footer>
